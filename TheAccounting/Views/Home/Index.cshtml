@using TheAccounting.Models
@using TheAccounting.Models.ViewModels

@model FeeData

@{
    ViewBag.Title = "Index";
}

<div class="well" style="margin-top:60px">
    <div class="form-horizontal">
        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(model => model.FeeType, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(model => model.FeeType,
                                            EnumHelper.GetSelectList(typeof(enFeeType)),
                                            "--請選擇--",
                                            new { @class = "form-control" }
                                         )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Amount, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.FeeDay, htmlAttributes: new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.FeeDay, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FeeDay, "", new { @class = "text-danger" })
                </div>
            </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Memo, htmlAttributes: new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Memo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Memo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="送出" class="btn btn-default" />
                    </div>
                </div>
        }
    </div>
</div>

@Html.Action("List")