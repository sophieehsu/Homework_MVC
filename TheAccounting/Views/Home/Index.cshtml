@model TheAccounting.Models.ViewModels.FeeData

@{
    ViewBag.Title = "Index";
}

    <div class="well">        
        <form class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="category" class="col-sm-2 control-label">類別</label>
                <div class="col-sm-10">
                    <select id="category" name="FeeType" class="form-control">
                        <option value="" selected>請選擇</option>
                        <option value="1">支出</option>
                        <option value="2">收入</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="money" class="col-sm-2 control-label">金額</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="money" name="Amount" placeholder="金額">
                </div>
            </div>
            <div class="form-group">
                <label for="date" class="col-sm-2 control-label">日期</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="date" name="FeeDay" placeholder="日期">
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-2 control-label">備註</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="description" name="Memo"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="送出" class="btn btn-default" />
                </div>
            </div>
            }
        
        </form>
    </div>



@Html.Action("List")